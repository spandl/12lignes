{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "outDir": "./.tmp/build/",
    "declaration": true,
    "lib": [
      "ES2020",
      "ES2020.Intl",
      "dom"
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
  },
  "include": [
    "decs.d.ts",
    "src/",
    ".eslintrc.cjs"
  ],
  "exclude": [
    "node_modules",
  ]
}